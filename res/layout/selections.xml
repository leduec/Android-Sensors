<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Selections" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
	    <CheckBox
	        android:id="@+id/radioButtonGPS"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="GPS" />
	
	    <CheckBox
	        android:id="@+id/radioButtonAccelerometer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Accelerometer" />
	
	    <CheckBox
	        android:id="@+id/radioButtonMagnetometer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Magnetometer" />
	
	    <CheckBox
	        android:id="@+id/radioButtonProximity"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Proximity" />
	
	    <CheckBox
	        android:id="@+id/radioButtonBrightness"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Brightness" />
	
	    <CheckBox
	        android:id="@+id/radioButtonGyroscope"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Gyroscope" />
	    
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Filename:" />
	
	    <EditText
	        android:id="@+id/editText1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:text="sensorsData" >
	
	        <requestFocus />
	    </EditText>

	    <Button
	        android:id="@+id/apply"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="Apply" />
	    
	</LinearLayout>
    
    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Select Activity" />
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

	    <Button
	        android:id="@+id/sensors"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Sensors" />

	    <Button
	        android:id="@+id/selections"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Selections" />

	    <Button
	        android:id="@+id/recording"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Recording" />
	</LinearLayout>
    
</LinearLayout>
